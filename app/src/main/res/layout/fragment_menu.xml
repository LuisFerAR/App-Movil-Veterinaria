<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/fondo_app"
    tools:context=".fragmentos.MenuFragment">

    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_margin="20dp"
     android:orientation="vertical">

        <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dp"
         android:orientation="horizontal">

          <ImageButton
           android:id="@+id/imgBtnPetShop"
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:background="@drawable/borde_menu_citas"
           android:scaleType="fitCenter"
           android:layout_marginLeft="60dp"
           android:src="@drawable/petshop3" />

           <ImageButton
            android:id="@+id/imgBtnCitas"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/borde_menu_citas"
            android:scaleType="fitCenter"
            android:src="@drawable/citas3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tex1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="70dp"
                android:text="PET SHOP"/>

            <TextView
                android:id="@+id/tex2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="90dp"
                android:text="CITAS"/>

        </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnConsultas"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/borde_menu_consulta"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitCenter"
        android:src="@drawable/consulta_online3" />

        <TextView
            android:id="@+id/tex3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:text="CONSULTAS ONLINE"/>

        <Button
            android:id="@+id/btnAdoptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:background="@drawable/borde_menu_adoptar"
            android:text="ADOPTA UNA MASCOTA" />

    </LinearLayout>
</FrameLayout>